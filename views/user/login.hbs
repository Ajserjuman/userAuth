   <link rel="stylesheet" href="/styles/userLogin.css">
   <div id="particles-js" class="snow"></div>

    <main>
       <div class="left-side"></div>
      
      <div class="right-side">
        <form method="post" action="/user/login" >
          <input type="text" id="message" name="message" value="{{message}}">
        <div class="btn-group">
          <button class="btn">
            <img class="logo" src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/d1c98974-c62d-4071-8bd2-ab859fc5f4e9" alt="" />
            <span>Sign in with Google</span>
          </button>
          <button class="btn">
            <img class="logo" src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/59c1561b-8152-4d05-b617-0680a7629a0e" alt="" />
            <span>Sign in with Apple</span>
          </button>
        </div>

        <div class="or">OR</div>

        <label for="email">Email</label>
        <input id="email" type="text" placeholder="Enter Email" name="email" required />

        <label for="password">Password</label>
        <input id="password"
          type="password"
          placeholder="Enter Password"
          name="password"
          required />

        <button type="submit" class="login-btn">Sign in</button>
        <div class="links">
          <a href="#">Forgot password?</a>
          <a href="#">Do not have an account?</a>
        </div>
      </form>
      </div>
    </main>

<script>
      console.log('hi');
      document.addEventListener('DOMContentLoaded',function()
      {
        document.querySelector('form').addEventListener('submit',validateForm);
      });

      const message = document.getElementById('message').value;

      if(message)
      {
        console.log(message);
        swal(message);
      }

      function validateForm(e)
        {
          e.preventDefault();
          console.log('hello');
          var email = document.getElementById('email').value;
          var password = document.getElementById('password').value;
          if(email == "" || password =="")
          {
            swal("All the fields are required");
            return
          }
          
          e.target.submit();
          return true
          
        }
      
    </script>